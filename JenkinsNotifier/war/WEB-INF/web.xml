<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<filter>
		<filter-name>authFilter</filter-name>
		<filter-class>com.ubermind.internal.jenkinsnotifier.AuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>authFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>oauth2callback</servlet-name>
		<servlet-class>com.ubermind.internal.jenkinsnotifier.AuthServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>oauth2callback</servlet-name>
		<url-pattern>/oauth2callback</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>JenkinsCompletedJobs</servlet-name>
		<servlet-class>com.ubermind.internal.jenkinsnotifier.JenkinsCompletedJobsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JenkinsCompletedJobs</servlet-name>
		<url-pattern>/completedJobs</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>NotifySubscribers</servlet-name>
		<servlet-class>com.ubermind.internal.jenkinsnotifier.NotifySubscribersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotifySubscribers</servlet-name>
		<url-pattern>/notifySubscribers</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>signout</servlet-name>
		<servlet-class>com.ubermind.internal.jenkinsnotifier.SignOutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>signout</servlet-name>
		<url-pattern>/signout</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
